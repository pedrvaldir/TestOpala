<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
            android:id="@+id/layerItem"
            android:left="20dp"
            android:right="20dp"
            android:bottom="20dp"
            android:top="20dp">

        <shape
                android:id="@+id/shape_selected"
                android:shape="rectangle">
            <corners android:radius="20dp"/>
            <padding android:left="20dp"
                     android:right="20dp"
                     android:top="20dp"
                     android:bottom="20dp"/>
            <stroke android:width="3dp" android:color="#526572"/>
            <solid android:color="@color/pad_white"/>
        </shape>
    </item>
</layer-list>